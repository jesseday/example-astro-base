---
/**
 * @file Show.astro
 * @description Conditional rendering component that
 *   renders a slot when the `when` prop is truthy.
 */
let when = Astro.props.when;

if (typeof when === 'function' && when.constructor.name !== 'AsyncFunction') {
  when = when();
}
else if (typeof when === 'function' && when.constructor.name === 'AsyncFunction') {
  when = await when();
}

if (!when) {
  return
}
