---
export interface Props {
  size?: string;
  gap?: string;
  fraction?: '66fr 34fr' | '34fr 66fr' | '75fr 25fr' | '25fr 75fr' | '50fr 50fr';
};
---

<ul data-component-id="Grid">
  <slot />
</ul>

<style define:vars={{fraction: Astro.props.fraction, gridGap: Astro.props.gap}}>
  [data-component-id="Grid"] {
    --min-item-size: var(--itemSize, 300px);
    --grid-gap: var(--gridGap, 1rem);
    --grid-fraction: var(--fraction, 1fr);
    display: grid;
    grid-column: 1 / -1;
    grid-template-columns: 1fr;
    gap: var(--space-base-md, 1rem);
    width: 100%;

    list-style: none;
    margin: 0;
    padding: 0;
  }

  [data-component-id="Grid"] :global(> li) {
    align-items: center;
    display: flex;
    justify-content: center;
    height: 200px;
    background-color: blue;
    color: var(--color-white, #fff);
    font-size: var(--size-step-1);
  }

  @container section (min-width: 768px) {
    [data-component-id="Grid"] {
      grid-template-columns: var(--grid-fraction);
    }
  }
</style>
