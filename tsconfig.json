{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@blocks/*": ["src/blocks/*"],
      "@components/*": ["src/components/*"],
      "@entities/*": ["src/entities/*"],
      "@integrations/*": ["src/integrations/*"],
      "@layouts/*": ["src/shared/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/shared/styles/*"],
    }
  },
  "include": ["src"]
}
